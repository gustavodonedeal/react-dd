{
    "plugins": [
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": 2017,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "prettier/prettier": [
            "error",
            {
                "singleQuote": true
            }
        ]
    },
    "env": {
        "es6": true,
        "node": true
    },
    "extends": [
        "prettier",
        "prettier/react"
    ]
}